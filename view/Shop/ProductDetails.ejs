<%- include('../Includes/Header.ejs') %>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

    <body>
        <%- include('../Includes/Navigation.ejs') %>
        <div class="container">
            
        
          
        <div class="card">
          <div class="row">
            <aside class="col-sm-5 border-right">
        <article class="gallery-wrap"> 
        <div class="img-big-wrap">
          <div><img src="../<%=data.prodImage%>"/></div>
        </div> <!-- slider-product.// -->
        <!-- slider-nav.// -->
        </article> <!-- gallery-wrap .end// -->
            </aside>
            <aside class="col-sm-7">
        <article class="card-body p-5">
          <h3 class="title mb-3"><%=data.prodTitle%></h3>
        
        <p class="price-detail-wrap"> 
          <span class="price h3 text-warning"> 
            <span class="currency">Rs. </span><span class="num"><%=data.prodPrice%></span>
          </span> 
          <span>/per Pcs</span> 
        </p> <!-- price-detail-wrap .// -->
        <dl class="item-property">
          <dt>Description</dt>
          <dd><%=data.prodDesc%></dd>
        </dl>
        <dl class="param param-feature">
          <dt>Model#</dt>
          <dd><%=data.prodTitle%></dd>
        </dl>  <!-- item-property-hor .// -->
        <dl class="param param-feature">
          <dt>Color</dt>
          <dd>Black and white</dd>
        </dl>  <!-- item-property-hor .// -->
        <dl class="param param-feature">
          <dt>Delivery</dt>
          <dd>All Over India</dd>
        </dl>  <!-- item-property-hor .// -->
        
        <hr>
                   <hr>
          <!-- <a href="/home_form" class="btn btn-lg btn-outline-danger text-uppercase"> Homepage </a> -->
      
        
          <form action="/addToCart" method="POST">
            <input type="hidden" value="<%=csrf%>" name="_csrf">
            <input type="hidden" name="quantity" value="3">
            <input type="hidden" name="productId" value="<%=data._id%>">
            <input type="Submit" value="ADD TO CART" class="btn btn-outline-danger" >

        </form> 
        
          
          <!-- <a href="#" class="btn btn-outline-danger"> <i class="fas fa-shopping-cart"></i> Add to cart </a> -->
        </article> <!-- card-body.// -->
            </aside> <!-- col.// -->
          </div> <!-- row.// -->
        </div> <!-- card.// -->
        
        
        </div>
        <%- include('../Includes/Footer.ejs') %>